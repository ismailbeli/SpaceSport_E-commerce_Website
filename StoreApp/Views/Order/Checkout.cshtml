@model Order
    <div class="text-center my-3">
        <h6 class="display-6">
            Order
        </h6>
    </div>

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="Checkout">
    <div class="form-group my-3">
        <label asp-for="Name">Name and Surname</label>
        <input class="form-control" asp-for="Name">
    </div>

    <div class="form-group my-3">
        <label asp-for="Line1">Credit Cart Number</label>
        <input class="form-control" asp-for="Line1">
    </div>

    <div class="form-group my-3">
        <label asp-for="Line2">CVV</label>
        <input class="form-control" asp-for="Line2">
    </div>

<div class="form-group my-3">
    <label asp-for="Line3">Last Date</label>
    <input class="form-control" asp-for="Line3" type="month">
</div>

    <div class="form-group my-3">
        <label asp-for="City">Adress</label>
        <input class="form-control" asp-for="City">
    </div>

    <div class="form-group my-3">
        <input asp-for="GiftWrap">
        <label>Gift wrap these items.</label>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">
            Complete Order
        </button>
    </div>


</form>